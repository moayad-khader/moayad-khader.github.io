<style>
    .will-change-transform {
  will-change: transform;
}
.cursor::after {
  display: block;
  content: '';
  position: absolute;
  width: 4px;
  height: 100%;
  background-color: #fff;
  animation: cursor 0.6s linear infinite alternate;
  will-change: opacity;
}

@keyframes cursor {
  0%,
  40% {
    opacity: 1;
  }

  60%,
  100% {
    opacity: 0;
  }
}

</style>
<script>
  const sentences = ["Computer Engineer 🛠", "Sofware Developer 👨‍💻", "Tech Wizard 🔮"];
let sentenceIndex = 0;
let characterIndex = 0;

function typeWriter() {
  if (characterIndex < sentences[sentenceIndex].length) {
    const el:any =  document.getElementById("typewriter");
    el.innerHTML += sentences[sentenceIndex].charAt(characterIndex);
    characterIndex++;
    setTimeout(typeWriter, 50);
  } else {
    setTimeout(deleteWriter, 2000);
  }
}

function deleteWriter() {
  if (characterIndex > 0) {
    const el:any =  document.getElementById("typewriter");
    el.innerHTML = sentences[sentenceIndex].substring(0, characterIndex - 1);
    characterIndex--;
    setTimeout(deleteWriter, 50);
  } else {
    sentenceIndex++;
    if (sentenceIndex >= sentences.length) {
      sentenceIndex = 0;
    }
    setTimeout(typeWriter, 500);
  }
}

window.onload = function() {
  typeWriter();
}

</script>
